#!/usr/bin/env bash

#------------------------------------------------------------
#
# Ciro D. Santilli 
#
# 
# Returns the inodes of the input files newline separated.
#
#------------------------------------------------------------

set -u # error on undefined variable
set -e # stop execution if one command goes wrong

usage()
{
  echo 'Usage: get-inode path' 1>&2
}

if [ $# -eq 0 ]
then
  usage
  exit 1
fi

for F in "$@"; do
  echo "$( ls -i "$F" | awk -F ' ' '{ print $1 }' )"
done

exit 0
