#!/usr/bin/env bash

MSG="automatic periodic commit push"
GITS=( "$BASH_BIN_DIR" "$PYTHON_BIN_DIR" "$HOMEFILES_DIR" )

set -u # error on undefined variable
set -e # stop execution if one command goes wrong

#commits and uploads all my git repos for things I might have forgotten to commit

for GIT_DIR in "${GIT_DIRS[@]}"
  cd "$GIT_DIR"
  git-commit "$MSG"
done
